<Window x:Class="Markdown2018.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Markdown2018"
        mc:Ignorable="d"
        Title="MainWindow" Height="507" Width="805">
    <Grid>
        <TextBox x:Name="MarkdownTextBox" HorizontalAlignment="Left" Height="399" Margin="0,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="381" FontSize="18" TextChanged="MarkdownTextBox_TextChanged"/>
        <ScrollBar x:Name="MarkdownScroll" HorizontalAlignment="Left" Margin="381,68,0,0" VerticalAlignment="Top" Height="399"/>
        <TextBox x:Name="PreviewTextBox" HorizontalAlignment="Left" Height="399" Margin="398,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="375" FontSize="18" TextChanged="PreviewTextBox_TextChanged"/>
        <ScrollBar x:Name="PreviewScroll" HorizontalAlignment="Left" Margin="773,68,0,0" VerticalAlignment="Top" Height="399"/>
        <Label x:Name="MarkdownLabel" Content="Markdown" HorizontalAlignment="Left" Margin="0,37,0,0" VerticalAlignment="Top" Width="93" FontSize="16"/>
        <Label x:Name="PreviewLabel" Content="Preview" HorizontalAlignment="Left" Margin="398,37,0,0" VerticalAlignment="Top" Width="93" FontSize="16"/>

    </Grid>
</Window>
